<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutNotification"
    android:layout_width="fill_parent"
    android:layout_height="100dp">

    <ImageView
        android:src="@drawable/dummy"
        android:id="@+id/image"
        android:layout_width="@dimen/dimen_100"
        android:layout_height="@dimen/dimen_100"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/bck_image"
        android:layout_width="match_parent"
        android:src="@drawable/gradient_notification"
        android:layout_height="@dimen/dimen_100"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="@dimen/dimen_200"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dimen_5"
        android:id="@+id/songName"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textColor="#000"
            android:text="Testing"
            android:id="@+id/title"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/dimen_10"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textSize="15dp"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textColor="#000"
            android:text="Testing is awecome"
            android:id="@+id/text"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/songName"
        android:weightSum="4"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/prevSongBtnNotification"
            android:src="@android:drawable/ic_media_previous"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="@dimen/dimen_50"
            android:layout_weight="5"
            android:id="@+id/playBtnNotification"
            android:src="@android:drawable/ic_media_play"
            android:layout_height="@dimen/dimen_50" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:id="@+id/nextSongBtnNotification"
            android:src="@android:drawable/ic_media_next"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dimen_30"
        android:layout_alignParentRight="true"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:layout_height="@dimen/dimen_30"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true" />



</RelativeLayout>